<%- include('header') %>
    <!-- ejs syntax - include header -->

    <div class="container">
        <div>
            <a href="/">
                <button>Go back</button>
            </a>
        </div>

        <form method="POST" id="update_product">
            <div class="new_product">
                <div class="form-group">
                    <label for="name">Name: </label>
                    <input type="text" name="name" value="" placeholder="Paul Rich">
                </div>
                <div class="form-group">
                    <label for="price">Price: </label>
                    <input type="text" name="price" value="" placeholder="2000 dkk">
                </div>
                <div class="form-group">
                    <label for="category">Category:</label>
                    <div class="radio inline">
                        <input type="radio" id="radio-1" name="category" value="Men">
                        <label for="radio-1" class="radio-label">Men</label>
                    </div>
                    <div class="radio inline">
                        <input type="radio" id="radio-2" name="category" value="Women">
                        <label for="radio-2" class="radio-label">Women</label>
                    </div>
                </div>

                <div class="form-group">
                    <label for="status" class="text-light">Status:</label>
                    <div class="radio inline">
                        <input type="radio" id="radio-3" name="status" value="In Stock">
                        <label for="radio-3" class="radio-label">In Stock</label>
                    </div>
                    <div class="radio inline">
                        <input type="radio" id="radio-4" name="status" value="Unavailable">
                        <label for="radio-4" class="radio-label">Unavailable</label>
                    </div>
                </div>

                <div class="form-group">
                    <button class="btn">Save</button>
                </div>

            </div>
        </form>
    </div>

    <%- include('footer') %>