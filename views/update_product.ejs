<%- include('header') %>

<header id="header">
    <nav>
        <div class="container">
            <div class="text-center">
                <h1>Update product</h1>
            </div>
        </div>
    </nav>
</header>

    <div class="container">
        <div>
            <a href="/">
                <button>Go back</button>
            </a>
        </div>

        <form method="POST" id="update_product">
            <div class="new_product">
                <div class="form-group">
                    <label for="name">Name: </label>
                    <input type="hidden" name="id" value="<%= product.id %>">
                    <input type="text" name="name" value="<%= product.name %>" placeholder="Paul Rich">
                </div>
                <div class="form-group">
                    <label for="price">Price: </label>
                    <input type="text" name="price" value="<%= product.price %>" placeholder="2000 dkk">
                </div>
                <div class="form-group">
                    <label for="category">Category:</label>
                    <div class="radio inline">
                        <input type="radio" id="radio-1" name="category" value="Men" <%= product.category == 'Men' ? 'checked' : '' %>>
                        <label for="radio-1" class="radio-label">Men</label>
                    </div>
                    <div class="radio inline">
                        <input type="radio" id="radio-2" name="category" value="Women" <%= product.category == 'Women' ? 'checked' : '' %>>
                        <label for="radio-2" class="radio-label">Women</label>
                    </div>
                </div>

                <div class="form-group">
                    <label for="status" class="text-light">Status:</label>
                    <div class="radio inline">
                        <input type="radio" id="radio-3" name="status" value="In Stock" <%= product.status == 'In Stock' ? 'checked' : '' %>>
                        <label for="radio-3" class="radio-label">In Stock</label>
                    </div>
                    <div class="radio inline">
                        <input type="radio" id="radio-4" name="status" value="Unavailable" <%= product.status == 'Unavailable' ? 'checked' : '' %>>
                        <label for="radio-4" class="radio-label">Unavailable</label>
                    </div>
                </div>

                <div class="form-group">
                    <button type="button" class="btn">Save</button>
                </div>

            </div>
        </form>
    </div>

<%- include('footer') %>